---

<section class="bg-neutral-100 p-4 text-xl relative flex grow flex-col">
  <!-- Contenedor para elementos seleccionados -->
  <div id="selection-preview-container" class="flex-1 mb-4">
    <h3 class="text-lg font-semibold mb-3 text-neutral-700">
      Selected Elements:
    </h3>
    <ul id="selected-layers-list" class="space-y-2">
      <li
        id="initial-selection-message"
        class="text-neutral-500 italic text-sm"
      >
        Select elements in Figma to see them here...
      </li>
    </ul>
  </div>

  <!-- Contenedor para cÃ³digo generado -->
  <div id="generated-code-container" class="hidden flex-1 flex flex-col">
    <div class="flex items-center justify-between mb-3">
      <h3
        id="generated-code-title"
        class="text-lg font-semibold text-neutral-700"
      >
        Generated Code:
      </h3>
      <div id="copy-button-container" class="hidden">
        <button
          id="copy-code-button"
          class="bg-neutral-800 text-white px-3 py-1 rounded text-sm hover:bg-neutral-700 transition-colors"
        >
          Copy Code
        </button>
      </div>
    </div>
    <pre
      id="generated-code-output"
      class="bg-neutral-800 text-green-400 p-4 rounded-lg overflow-auto flex-1 text-sm font-mono whitespace-pre-wrap">
    </pre>
  </div>

  <!-- BotÃ³n de copiar cÃ³digo -->
  <button
    id="copy-code-button"
    class="absolute top-0 right-0 p-2 text-figma-bg bg-neutral-800 m-2.5 rounded-lg hover:bg-neutral-700 transition-all duration-200"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="20"
      height="20"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="1.5"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="icon icon-tabler icons-tabler-outline icon-tabler-copy"
      ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
        d="M7 7m0 2.667a2.667 2.667 0 0 1 2.667 -2.667h8.666a2.667 2.667 0 0 1 2.667 2.667v8.666a2.667 2.667 0 0 1 -2.667 2.667h-8.666a2.667 2.667 0 0 1 -2.667 -2.667z"
      ></path><path
        d="M4.012 16.737a2.005 2.005 0 0 1 -1.012 -1.737v-10c0 -1.1 .9 -2 2 -2h10c.75 0 1.158 .385 1.5 1"
      ></path></svg
    >
  </button>
</section>

<style>
  #selected-layers-list li {
    padding: 2px 0;
  }
  #generated-code-output:empty::before {
    content: "Code will appear here once generated...";
    color: #9ca3af; /* text-gray-400 */
    font-style: italic;
  }

  #generated-code-container pre {
    scrollbar-color: #d1d5db #f3f4f6; /* bg-gray-200 */
    scrollbar-width: thin;
    /* scrollbar-gutter: stable; */
    scrollbar-track-color: transparent;
  }
</style>
